{
  "name": "@edfi/meadowlark-lambda",
  "version": "0.1.0",
  "bin": {
    "meadowlark-lambda": "bin/meadowlark-lambda.js"
  },
  "scripts": {
    "build:base": "tsc && npm run build:deps",
    "build:no-stage": "npm run build:base && cdk synth -q --no-staging",
    "build": "npm run build:base && cdk synth -q",
    "cdk:deploy": "npm run build && cdk deploy",
    "build:deps": "npm run build:deps:postgres && npm run build:deps:opensearch && npm run build:deps:core && npm run build:deps:copyfiles",
    "build:deps:postgres": "esbuild --bundle --platform=node --sourcemap ../../backends/meadowlark-postgresql-backend/index.ts --outfile=dist/layer/nodejs/node_modules/meadowlark-postgresql-backend.js --external:pg-native",
    "build:deps:opensearch": "esbuild --bundle --platform=node --sourcemap ../../backends/meadowlark-opensearch-backend/index.ts --outfile=dist/layer/nodejs/node_modules/meadowlark-opensearch-backend.js",
    "build:deps:core": "esbuild --bundle --platform=node --sourcemap ../../packages/meadowlark-core/index.ts --outfile=dist/layer/nodejs/node_modules/@edfi/meadowlark-core/index.js",
    "build:deps:utilities": "esbuild --bundle --platform=node --sourcemap ../../packages/meadowlark-utilities/index.ts --outfile=dist/layer/nodejs/node_modules/@edfi/meadowlark-utilities/index.js",
    "build:deps:authz": "esbuild --bundle --platform=node --sourcemap ../../packages/meadowlark-authz-server/index.ts --outfile=dist/layer/nodejs/node_modules/@edfi/meadowlark-authz-server/index.js",
    "build:deps:copyfiles": "npm run build:deps:copyfiles:pg-fmt && npm run build:deps:copyfiles:meta-ed && npm run build:deps:copyfiles:coreindex",
    "build:deps:copyfiles:pg-fmt": "copyfiles -f ../../node_modules/pg-format/lib/reserved.js \"dist/layer/nodejs/node_modules/\"",
    "build:deps:copyfiles:meta-ed": "copyfiles -f ../../node_modules/@edfi/metaed-core/package.json \"dist/layer/\"",
    "build:deps:copyfiles:coreindex": "copyfiles -f ./dist/node_modules/@edfi/meadowlark-core/index.js \"dist/node_modules/@edfi/meadowlark-core/dist/index.js\""
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "aws-cdk": "2.76.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5",
    "@edfi/meadowlark-authz-server": "^v0.3.0-pre-35",
    "@edfi/meadowlark-core": "^v0.3.0-pre-35",
    "@edfi/meadowlark-utilities": "^v0.3.0-pre-35",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.0.3",
    "lodash": "*",
    "uuid": "*",
    "copyfiles": "2.4.1"
  },
  "dependencies": {
    "aws-cdk-lib": "2.76.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "@types/aws-lambda": "^8.10.115",
    "@types/lodash": "4.14.194",
    "@types/jest": "29.5.1",
    "@types/node": "*",
    "@types/uuid": "*",
    "esbuild": "*"
  }
}